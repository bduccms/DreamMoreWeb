                        <button id="logoutBtn" class="btn btn-outline-light btn-sm ms-2">Logout</button>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <button class="btn btn-outline-light btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#signInModal">
                            Sign In
                        </button>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>


    <!-- Rest of your content (modals, scripts, etc.) remains the same -->
    <!-- Sign In Modal -->
    


 <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header border-bottom-0">
                    <h2 class="modal-title fw-bold mb-0" id="signInModalLabel">Welcome back</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-5 pt-0">
                    <form id="signInForm" class="needs-validation" novalidate>
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-3" id="signInEmail" placeholder="name@example.com" required>
                            <label for="signInEmail">Email address</label>
                            <div class="invalid-feedback">
                                Please enter a valid email address
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-3" id="signInPassword" placeholder="Password" required>
                            <label for="signInPassword">Password</label>
                            <div class="invalid-feedback">
                                Please enter your password
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>
                            <a href="#" class="text-decoration-none">Forgot password?</a>
                        </div>
                        <button type="submit"   id="applybtn" class="w-100 mb-2 btn btn-lg rounded-3 ">Sign in</button>
                        <div class="text-center my-4">
                            <small class="text-muted">or continue with</small>
                        </div>
                        <div class="d-flex gap-2 mb-4">
                            <button class="w-100 py-2 btn btn-outline-secondary rounded-3" type="button">
                                <i class="bi bi-google"></i> Google
                            </button>
                            <button class="w-100 py-2 btn btn-outline-secondary rounded-3" type="button">
                                <i class="bi bi-facebook"></i> Facebook
                            </button>
                        </div>
                        <div class="text-center">
                            <small class="text-muted">
                                Don't have an account? 
                                <a href="#" class="fw-semibold text-decoration-none" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign up</a>
                            </small>
                        </div>
                        <div id="signInErrorMessage" class="alert alert-danger mt-3 text-center" style="display: none"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Sign Up Modal -->
    <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header border-0 pb-0">
                    <div class="w-100 text-center">
                        <h3 class="modal-title fw-bold" id="signUpModalLabel">Create Account</h3>
                        <p class="text-muted small">Join our community today</p>
                    </div>
                    <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="signUpForm" action="/auth/register" method="POST" class="px-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control rounded-4" id="firstName" name="firstName" placeholder="First Name" required
                                        pattern="[A-Za-z]+" title="First name should contain only letters">
                                    <label for="firstName">First Name</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control rounded-4" id="lastName" name="lastName" placeholder="Last Name" required
                                        pattern="[A-Za-z]+" title="Last name should contain only letters">
                                    <label for="lastName">Last Name</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control rounded-4" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" required
                                pattern="[0-9]{10}" title="Phone number should be 10 digits">
                            <label for="phoneNumber">Phone Number</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control rounded-4" id="email" name="email" placeholder="Email" required>
                            <label for="email">Email</label>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control rounded-4" id="password" name="password" placeholder="Password" required
                                pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$"
                                title="Password must be at least 8 characters with letters and numbers">
                            <label for="password">Password</label>
                        </div>
                        
                        <div class="form-floating mb-4">
                            <select class="form-select rounded-4" id="role" name="role" aria-label="Select role">
                                <option value="student" selected>Student</option>
                                <option value="worker">Worker</option>
                                <option value="admin">Admin</option>
                            </select>
                            <label for="role">Role</label>
                        </div>
                        
                        <button type="submit" id="applybtn" class="btn btn-primary btn-lg w-100 rounded-4 fw-bold">Create Account</button>
                        <div id="errorMessage" class="alert alert-danger mt-3 text-center rounded-4" style="display: none"></div>
                        
                        <div class="d-flex align-items-center my-4">
                            <hr class="flex-grow-1">
                            <span class="px-3 text-muted small">OR</span>
                            <hr class="flex-grow-1">
                        </div>
                        
                        <div class="text-center mb-3">
                            <button type="button" class="btn btn-outline-primary rounded-circle mx-2">
                                <i class="bi bi-google"></i>
                            </button>
                            <button type="button" class="btn btn-outline-primary rounded-circle mx-2">
                                <i class="bi bi-facebook"></i>
                            </button>
                            <button type="button" class="btn btn-outline-primary rounded-circle mx-2">
                                <i class="bi bi-apple"></i>
                            </button>
                        </div>
                        
                        <div class="text-center mt-4">
                            <p class="small">
                                Already have an account? 
                                <a href="#" class="text-decoration-none fw-bold" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Message and Rocket Animation -->
    <div id="successMessage" class="alert alert-success position-fixed bottom-0 end-0 m-3" style="display: none">
        Welcome! 🎉
    </div>
    <div id="rocketAnimation" class="position-fixed bottom-0 end-0 m-3" style="display: none">
        <div class="rocket">🚀</div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
 <!-- Bootstrap JS (must be after HTML) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>

  
document.addEventListener("DOMContentLoaded", function () {
    const toggler = document.querySelector(".navbar-toggler");
    const menu = document.querySelector("#navbarNav");

    toggler.addEventListener("click", function () {
        // Toggle 'show' class for menu
        menu.classList.toggle("show");

        // Toggle aria-expanded attribute
        const isExpanded = toggler.getAttribute("aria-expanded") === "true";
        toggler.setAttribute("aria-expanded", !isExpanded);

        // Optionally close menu when clicking outside
        document.addEventListener("click", function outsideClick(e) {
            if (!menu.contains(e.target) && !toggler.contains(e.target)) {
                menu.classList.remove("show");
                toggler.setAttribute("aria-expanded", false);
                document.removeEventListener("click", outsideClick);
            }
        });
    });

    // Close menu when clicking a link
    document.querySelectorAll("#navbarNav .nav-link").forEach(link => {
        link.addEventListener("click", function () {
            menu.classList.remove("show");
            toggler.setAttribute("aria-expanded", false);
        });
    });
});


        // SIGN IN FORM HANDLER
        document.getElementById('signInForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const errorMessageEl = document.getElementById('signInErrorMessage');
            errorMessageEl.style.display = 'none';

            const email = this.signInEmail.value.trim();
            const password = this.signInPassword.value.trim();

            try {
                const res = await fetch('/auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, password }),
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('rocketAnimation').style.display = 'block';

                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('signInModal')).hide();
                        document.getElementById('successMessage').style.display = 'none';
                        document.getElementById('rocketAnimation').style.display = 'none';
                        window.location.reload();
                    }, 2000);
                } else {
                    errorMessageEl.textContent = data.message || 'Invalid credentials.';
                    errorMessageEl.style.display = 'block';
                }
            } catch (err) {
                errorMessageEl.textContent = 'Network error. Please try again.';
                errorMessageEl.style.display = 'block';
            }
        });

        // SIGN UP FORM HANDLER
        document.getElementById('signUpForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            const errorMessageEl = document.getElementById('errorMessage');
            errorMessageEl.style.display = 'none';

            const formData = {
                firstName: this.firstName.value.trim(),
                lastName: this.lastName.value.trim(),
                phoneNumber: this.phoneNumber.value.trim(),
                email: this.email.value.trim(),
                password: this.password.value,
                role: this.role.value,
            };

            try {
                const res = await fetch('/auth/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData),
                });
                const data = await res.json();

                if (data.success) {
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('rocketAnimation').style.display = 'block';
                    this.reset();

                    setTimeout(() => {
                        bootstrap.Modal.getInstance(document.getElementById('signUpModal')).hide();
                        document.getElementById('successMessage').style.display = 'none';
                        document.getElementById('rocketAnimation').style.display = 'none';
                        window.location.reload();
                    }, 2500);
                } else {
                    errorMessageEl.textContent = data.message || 'Registration failed.';
                    errorMessageEl.style.display = 'block';
                }
            } catch (err) {
                errorMessageEl.textContent = 'Network error. Please try again.';
                errorMessageEl.style.display = 'block';
            }
        });

        // LOGOUT BUTTON HANDLER
        document.addEventListener('DOMContentLoaded', () => {
            const logoutBtn = document.getElementById('logoutBtn');
            if (logoutBtn) {
                logoutBtn.addEventListener('click', async () => {
                    try {
                        const res = await fetch('/auth/logout', { method: 'POST' });
                        const data = await res.json();
                        if (data.success) {
                            window.location.reload();
                        } else {
                            alert('Logout failed. Please try again.');
                        }
                    } catch (err) {
                        alert('Network error. Please try again.');
                    }
                });
            }
        });
    </script>
</body>
</html>