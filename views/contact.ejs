    <style>
        /* ===== Footer Base Styles ===== */
        footer {
            background: linear-gradient(135deg, #1f2937, #111827);
            color: #ffffff;
            padding: 3rem 0 1rem;
            position: relative;
            overflow: hidden;
        }
        
        /* ===== Footer Links ===== */
        footer a {
            color: #9ca3af;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-block;
        }
        
        footer a:hover {
            color: #ff7800;
            transform: translateX(5px);
        }
        
        /* ===== Footer Columns ===== */
        .footer-col {
            margin-bottom: 2rem;
        }
        
        .footer-col h6 {
            color: #ffffff;
            font-weight: 600;
            margin-bottom: 1.5rem;
            position: relative;
            font-size: 1.2rem;
        }
        
        .footer-col h6::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -8px;
            width: 50px;
            height: 2px;
            background: #ff7800;
        }
        
        .footer-col ul {
            list-style: none;
            padding-left: 0;
        }
        
        .footer-col ul li {
            margin-bottom: 0.8rem;
        }
        
        /* ===== Logo Section ===== */
        .footer-logo {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .footer-logo img {
            border-radius: 50%;
            margin-right: 1rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }
        
        .footer-logo img:hover {
            transform: rotate(15deg);
        }
        
        .logowrite {
            font-size: 1.5rem;
            font-weight: 700;
            color: #ffffff;
        }
        
        .footer-about {
            color: #d1d5db;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }
        
        /* ===== Social Icons ===== */
        .social-icons {
            display: flex;
            justify-content: space-between;
            max-width: 300px;
            margin-top: 1.5rem;
        }
        
        .social-icons a {
            color: #ff7800;
            font-size: 1.5rem;
            margin-right: 0;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.05);
        }
        
        .social-icons a:hover {
            color: #ffffff;
            background: #ff7800;
            transform: translateY(-5px) scale(1.1);
        }
        
        /* ===== Footer Bottom ===== */
        .footer-bottom {
            border-top: 1px solid #374151;
            padding-top: 1.5rem;
            margin-top: 2rem;
            font-size: 0.9rem;
            color: #9ca3af;
        }
        
        .footer-bottom a {
            color: #d1d5db;
        }
        
        .footer-bottom a:hover {
            color: #ff7800;
            text-decoration: underline;
        }
        
        .developer-credit {
            color: #ff7800;
            font-weight: 600;
        }
        
        /* ===== Responsive Adjustments ===== */
        @media (max-width: 992px) {
            .footer-col {
                margin-bottom: 2.5rem;
            }
            
            .social-icons {
                max-width: 100%;
            }
        }
        
        @media (max-width: 768px) {
            footer {
                text-align: center;
            }
            
            .footer-col h6::after {
                left: 50%;
                transform: translateX(-50%);
            }
            
            .footer-logo {
                justify-content: center;
            }
            
            .social-icons {
                justify-content: center;
                gap: 1rem;
                margin: 1.5rem auto;
            }
            
            .footer-bottom {
                text-align: center;
            }
            
            .footer-bottom div {
                margin-top: 1rem;
            }
        }
        
        @media (max-width: 576px) {
            .logowrite {
                font-size: 1.3rem;
            }
            
            .footer-col h6 {
                font-size: 1.1rem;
            }
            
            .footer-col ul li {
                font-size: 0.9rem;
            }
        }
    </style>
