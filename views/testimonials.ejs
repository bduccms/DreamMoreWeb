<section id="testimonials" class="py-5" style="background-color: #010318;">
    <div class="container">
        <h2 class="section-title text-center mb-5" style="color: #ffffff;">What Our Clients Say</h2>
        
        <div class="row align-items-center">
            <!-- Left arrow button -->
            <div class="col-auto">
                <button class="testimonial-nav-btn" id="prev-testimonial">
                    <span class="arrow-icon" style="color: #ffffff;">&#60;</span>
                </button>
            </div>

            <!-- Testimonials Cards -->
            <div class="col">
                <div class="testimonial-slider">
                    <% if (testimonials && testimonials.length > 0) { %>
                        <% testimonials.forEach(testimonial => { %>
                            <div class="testimonial-card-wrapper">
                                <div class="testimonial-card">
                                    <div class="card-border-top"></div>
                                    <div class="testimonial-img-container">
                                        <img src="<%= testimonial.photo %>" class="testimonial-img" alt="Profile photo">
                                        <div class="quote-icon">❝</div>
                                    </div>
                                    <div class="card-body">
                                        <p class="testimonial-text"><%= testimonial.description %></p>
                                        <div class="testimonial-footer">
                                            <h5 class="testimonial-name"><%= testimonial.name %></h5>
                                            <div class="testimonial-rating">
                                                ★★★★★
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center" style="color: #ffffff;">No testimonials found.</p>
                    <% } %>
                </div>
            </div>

            <!-- Right arrow button -->
            <div class="col-auto">
                <button class="testimonial-nav-btn" id="next-testimonial">
                    <span class="arrow-icon" style="color: #ffffff;">&#62;</span>
                </button>
            </div>
        </div>
    </div>
</section>

<style>
    /* Base Styles */
    .testimonial-card {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(1, 3, 24, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
        position: relative;
        padding: 20px;
    }
    
    .testimonial-card-wrapper {
        padding: 10px;
    }
    
    .card-border-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: #ff7800;
        transition: all 0.3s ease;
    }
    
    .testimonial-img-container {
        position: relative;
        width: 180px;
        height: 180px;
        margin: 20px auto 20px;
        z-index: 1;

    }
    
    .testimonial-img {
        padding: 4px;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #ffffff;
        box-shadow: 0 4px 10px rgba(1, 3, 24, 0.1);
        transition: all 0.3s ease;
    }
    
    .quote-icon {
        position: absolute;
        bottom: -10px;
        right: -10px;
        background: #ff7800;
        color: #ffffff;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 16px;
    }
    
    .testimonial-text {
        color: #010318;
        font-size: 15px;
        line-height: 1.6;
        margin-bottom: 20px;
        font-style: italic;
    }
    
    .testimonial-name {
        color: #010318;
        font-weight: 600;
        margin-bottom: 5px;
    }
    
    .testimonial-rating {
        color: #ff7800;
        font-size: 14px;
    }
    
    .testimonial-footer {
        border-top: 1px solid rgba(1, 3, 24, 0.1);
        padding-top: 15px;
    }
    
    /* Hover Effects */
    .testimonial-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(1, 3, 24, 0.15);
    }
    
    .testimonial-card:hover .card-border-top {
        height: 6px;
    }
    
    .testimonial-card:hover .testimonial-img {
        transform: scale(1.05);
        box-shadow: 0 6px 15px rgba(1, 3, 24, 0.2);
    }
    
    /* Navigation Buttons */
    .testimonial-nav-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: #ff7800;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
    .testimonial-nav-btn:hover {
        background-color: #ff7800;
    }
    
    .arrow-icon {
        font-size: 20px;
        transition: all 0.3s ease;
    }
    
    .testimonial-nav-btn:hover .arrow-icon {
        transform: scale(1.2);
    }
    
    /* Slider Layout */
    .testimonial-slider {
        display: flex;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 20px;
        margin-bottom: -20px;
    }
    
    .testimonial-slider::-webkit-scrollbar {
        display: none;
    }
    
    /* Responsive Design */
    @media (max-width: 768px) {
        .testimonial-card-wrapper {
            min-width: 80%;
        }
        
        .testimonial-nav-btn {
            width: 40px;
            height: 40px;
        }
    }
    
    @media (min-width: 769px) {
        .testimonial-card-wrapper {
            min-width: 33.33%;
        }
    }
</style>

<script>
    // Basic slider functionality
    document.addEventListener('DOMContentLoaded', function() {
        const slider = document.querySelector('.testimonial-slider');
        const prevBtn = document.getElementById('prev-testimonial');
        const nextBtn = document.getElementById('next-testimonial');
        
        if (slider && prevBtn && nextBtn) {
            prevBtn.addEventListener('click', () => {
                slider.scrollBy({ left: -slider.offsetWidth / 3, behavior: 'smooth' });
            });
            
            nextBtn.addEventListener('click', () => {
                slider.scrollBy({ left: slider.offsetWidth / 3, behavior: 'smooth' });
            });
        }
    });
</script>