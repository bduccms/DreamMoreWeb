<!-- Add Bootstrap CSS in your <head> if not already included -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>

<div class="container mt-5">
  <div class="card testimonial-card shadow-lg mx-auto">
    <div class="card-header text-center">
      <h2 class="card-title mb-0">Add New Testimonial</h2>
    </div>
    <div class="card-body">
      <form
        action="/admin/add-testimonial"
        method="POST"
        enctype="multipart/form-data"
        class="needs-validation"
        novalidate
      >
        <div class="mb-4">
          <label for="name" class="form-label fw-semibold">Name</label>
          <input
            type="text"
            class="form-control form-control-lg"
            id="name"
            name="name"
            placeholder="Enter full name"
            required
          />
          <div class="invalid-feedback">Please enter a name.</div>
        </div>

        <div class="mb-4">
          <label for="description" class="form-label fw-semibold"
            >Description</label
          >
          <textarea
            class="form-control form-control-lg"
            id="description"
            name="description"
            rows="4"
            placeholder="Write the testimonial description"
            required
          ></textarea>
          <div class="invalid-feedback">Please provide a description.</div>
        </div>

        <div class="mb-4">
          <label for="photo" class="form-label fw-semibold">Photo</label>
          <input
            type="file"
            class="form-control form-control-lg"
            id="photo"
            name="photo"
            accept="image/*"
            required
          />
          <div class="invalid-feedback">Please upload a photo.</div>
        </div>

        <button type="submit" class="btn btn-submit btn-lg w-100">
          Add Testimonial
        </button>
      </form>
    </div>
  </div>
</div>

<style>
  /* Card Styling */
  .testimonial-card {
    max-width: 600px;
    background-color: #010318;
    border-radius: 15px;
    border: none;
    color: #ffffff;
  }

  /* Header */
  .testimonial-card .card-header {
    background-color: #ff7800;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }

  .testimonial-card .card-title {
    color: #010318;
    font-weight: 700;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  /* Labels */
  .testimonial-card .form-label {
    color: #ff7800;
    font-weight: 600;
  }

  /* Inputs and Textarea */
  .testimonial-card .form-control {
    background-color: #010318;
    border: 2px solid #ff7800;
    color: #ffffff;
    border-radius: 8px;
    transition: border-color 0.3s ease;
  }

  .testimonial-card .form-control::placeholder {
    color: #ff780099;
  }

  .testimonial-card .form-control:focus {
    border-color: #ffffff;
    box-shadow: 0 0 5px #ff7800;
    background-color: #010318;
    color: #ffffff;
  }

  /* File input */
  input[type="file"].form-control {
    padding: 0.4rem 0.75rem;
  }

  /* Submit button */
  .btn-submit {
    background-color: #ff7800;
    color: #010318;
    font-weight: 700;
    border-radius: 12px;
    border: none;
    transition: background-color 0.3s ease;
  }

  .btn-submit:hover,
  .btn-submit:focus {
    background-color: #e26e00;
    color: #ffffff;
  }

  /* Bootstrap invalid feedback custom color */
  .invalid-feedback {
    color: #ff7800;
  }
</style>

<script>
  // Bootstrap 5 validation script to enable validation feedback
  (() => {
    "use strict";

    const forms = document.querySelectorAll(".needs-validation");

    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
