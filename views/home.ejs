<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dreammore Company</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="icon" href="/Uploads/logodm.jpg" style="border-radius: 50%;" type="image/x-icon" />
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="/css/course.css">
  <style>
    /* Custom styles for responsive design */
    body {
    
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }

    /* Hero section responsive adjustments */
    .hero-part {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem 0;
    }

    #home-content {
      text-align: center;
      padding: 2rem;
    }

    /* Auth buttons responsive styling */
    .auth-buttons {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
      margin-top: 2rem;
    }

    .auth-btn {
      min-width: 160px;
      padding: 0.75rem;
      border-radius: 8px !important;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .signin-btn {
      background-color: #ff7800;
      border: none;
    }

    .signup-btn {
      background-color: #010318;
      color: white;
      border: 2px solid #010318;
    }

    .getstarted-btn {
      background-color: #010318;
      color: white;
      margin-top: 1.5rem;
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
    }

    /* Modal responsive adjustments */
    .modal-content {
      background-color: #ffffff;
      border-radius: 12px;
      border: none;
      box-shadow: 0 8px 24px rgba(1, 3, 24, 0.2), 0 4px 12px rgba(1, 3, 24, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .modal-content:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 32px rgba(1, 3, 24, 0.25), 0 6px 16px rgba(1, 3, 24, 0.15);
    }

    .modal-header {
      background-color: #010318;
      color: #ffffff;
      border-bottom: none;
      padding: 1.5rem;
    }

    .modal-title {
      font-weight: 600;
    }

    .modal-body {
      padding: 2rem;
    }

    .form-control {
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      padding: 0.75rem;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: #ff7800;
      box-shadow: 0 0 0 0.25rem rgba(255, 120, 0, 0.25);
    }

    .form-label {
      color: #010318;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }

    .btn-success, .btn-primary {
      background-color: #ff7800;
      border: none;
      border-radius: 8px;
      padding: 0.75rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-success:hover, .btn-primary:hover {
      background-color: #e56a00;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 120, 0, 0.3);
    }

    .btn-link {
      color: #ff7800;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .btn-link:hover {
      color: #e56a00;
      text-decoration: underline;
    }

    /* Responsive breakpoints */
    @media (max-width: 768px) {
      .hero-part {
        min-height: 80vh;
      }
      
      .auth-buttons {
        flex-direction: column;
        align-items: center;
      }
      
      .auth-btn {
        width: 100%;
        max-width: 220px;
      }
    }

    @media (max-width: 576px) {
      .modal-dialog {
        margin: 0.5rem;
      }

      .modal-content {
        border-radius: 10px;
      }

      .modal-body {
        padding: 1.5rem;
      }

      .modal-header {
        padding: 1rem;
      }

      .form-control {
        padding: 0.65rem;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/header.ejs') %>

  <!-- Home Section -->
  <section id="home" class="hero-part">
    <div class="container" id="home-content">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger text-center" role="alert">
          <%= error %>
        </div>
      <% } %>
      
      <!-- Auth Buttons - Responsive Layout -->
      <div class="auth-buttons">
        <button class="btn signin-btn auth-btn" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</button>
        <button class="btn signup-btn auth-btn" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign Up</button>
        <a href="#contact" class="btn getstarted-btn">Get Started</a>
      </div>
    </div>
  </section>

  <%- include('services.ejs') %>
  <%- include('courses.ejs', { courses: courses, user: user }) %>
  <%- include('portfolio.ejs', { portfolios: portfolios }) %>
  <%- include('about.ejs') %>
  <%- include('teams.ejs') %>
  <%- include('testimonials.ejs', { testimonials: testimonials }) %>
  <%- include('contact.ejs') %>

  <!-- Sign Up Modal -->
  <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signup" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signUpModalLabel">Sign Up</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="mb-3">
              <label for="signupEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signupEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="signupPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signupPassword" name="password" required>
            </div>
            <div class="mt-3 text-center">
              <span>Already have an account? </span>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sign In Modal -->
  <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signin" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signInModalLabel">Sign In</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label for="signinEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signinEmail" name="email" required>
            </div>
            <div class="mb-3">
              <label for="signinPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signinPassword" name="password" required>
            </div>
            <div class="d-flex justify-content-between mt-3">
              <a href="/forgot-password" class="text-primary">Forgot Password?</a>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signUpModal">Create Account</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" id="getstartedbtn" class="btn btn-primary w-100">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>