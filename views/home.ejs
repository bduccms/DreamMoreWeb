<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dreammore Company</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="icon" href="/Uploads/logodm.jpg"  style="border-radius: 50%;"  type="image/x-icon" />
  <link rel="stylesheet" href="/css/styles.css"/>
  <link rel="stylesheet" href="/css/course.css">
  <style>
    /* Responsive Hero Section */
    .hero-part {
      background-image: url('/HOME2.png');
      background-size: cover;
      background-position: center;
      min-height: 100vh;
      display: flex;
      align-items: center;
      position: relative;
    }
    
    #home-content {
      position: relative;
      z-index: 2;
      padding: 2rem;
      text-align: center;
    }
    
    /* Responsive Button Group */
    .auth-buttons {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
   
      position: relative;
     padding: 80px 20px;
   
    }
    
    .auth-btn {
     
      width: 160px;
      height: 60px;
      border-radius: 20px !important;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    
    .btget {
      margin: 2rem auto 0;
      max-width: 200px;
      border-radius: 8px !important;
    }
    
    /* Responsive Spacing Adjustments */
    @media (max-width: 768px) {
      .hero-part {
        min-height: 90vh;
      }
      
      #home-content {
        padding: 1rem;
      }
      
      .auth-buttons {
        flex-direction: column;
        align-items: center;
      }
      
      .auth-btn {
        width: 100%;
        max-width: 200px;
      }
    }
    
    @media (max-width: 576px) {
      .auth-btn {
        height: 50px;
        font-size: 0.9rem;
      }
      
      .btget {
        width: 100%;
        max-width: 160px;
      }
    }
    
    /* Modal Responsiveness (kept your existing styles but enhanced for mobile) */
    @media (max-width: 576px) {
      .modal-dialog {
        margin: 0.5rem;
      }
      
      .modal-content {
        border-radius: 8px;
      }
      
      .modal-body {
        padding: 1rem;
      }
      
      .form-control {
        padding: 0.5rem;
      }
      
      .btn-success, .btn-primary {
        padding: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/header.ejs') %>

  <!-- Home Section - Made Responsive -->
  <section id="home" class="hero-part">
    <div class="container" id="home-content">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger text-center" role="alert">
          <%= error %>
        </div>
      <% } %>
      
      <!-- Responsive Spacing - Replaced fixed breaks with proper padding -->
      <div class="py-5 py-md-5 py-lg-5">
        
      </div>
      
      <!-- Auth Buttons - Made Responsive -->
       
      <div class="auth-buttons">
        <!-- <button class="btn btn-success auth-btn" data-bs-toggle="modal" data-bs-target="#signInModal" style="background-color: #ff7800;padding: 0;">Sign In</button> -->
        <!-- <button class="btn btn-outline-light auth-btn" data-bs-toggle="modal" data-bs-target="#signUpModal" style="background-color: #010318;">Sign Up</button>
        <a href="#contact" class="btn btn-primary btn-lg mt-3 btget">Get Started</a> -->
      </div>
    </div>
  </section>

  <%- include('services.ejs') %>
  <%- include('courses.ejs', { courses: courses, user: user }) %>
  <%- include('portfolio.ejs', { portfolios: portfolios }) %>
  <%- include('about.ejs') %>
  <%- include('teams.ejs') %>
  <%- include('testimonials.ejs', { testimonials: testimonials }) %>
  <%- include('contact.ejs') %>

  <!-- Sign In Modal - Kept your existing modal code but made it responsive -->
  <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signup" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signUpModalLabel">Sign Up</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3 form-group">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3 form-group">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            <div class="mb-3 form-group">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signupEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signupEmail" name="email" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signupPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signupPassword" name="password" required>
            </div>
            <div class="mt-3">
              <span>Already have an account? </span>
              <button type="button"  id="applybtn" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit"  id="applybtn" class="btn w-100">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sign In Modal -->
  <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signin" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signInModalLabel">Sign In</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3 form-group">
              <label for="signinEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signinEmail" name="email" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signinPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signinPassword" name="password" required>
            </div>
            <div class="mt-3">
              <a href="/forgot-password" class="text-secondary">Forgot Password?</a>
            </div>
            <div class="mt-3">
              <span>Don't have an account? </span>
              <button type="button"  id="applybtn" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign Up</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" id="getstartedbtn" class="btn w-100">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>