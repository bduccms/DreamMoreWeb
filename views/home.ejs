 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authentication Modals</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles for the modals */

    body {
      background-image: url('/Uploads/home3.png');
    }
    .modal-content {
      background-color: #ffffff;
      border-radius: 12px;
      border: none;
      box-shadow: 0 8px 24px rgba(1, 3, 24, 0.2), 0 4px 12px rgba(1, 3, 24, 0.1);
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .modal-content:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 32px rgba(1, 3, 24, 0.25), 0 6px 16px rgba(1, 3, 24, 0.15);
    }

    .modal-header {
      background-color: #010318;
      color: #ffffff;
      border-bottom: none;
      padding: 1.5rem;
    }

    .modal-title {
      font-weight: 600;
    }

    .modal-body {
      padding: 2rem;
    }

    .form-control {
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      padding: 0.75rem;
      transition: all 0.3s ease;
      position: relative;
      background: transparent;
      z-index: 1;
    }

    .form-control:focus {
      border-color: transparent;
      box-shadow: none;
      outline: none;
    }

    .form-group {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .form-group::before {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      border-radius: 8px;
      background: linear-gradient(45deg, #ff7800, #010318);
      opacity: 0;
      transition: opacity 0.3s ease;
      z-index: 0;
    }

    .form-group:has(.form-control:focus)::before {
      opacity: 1;
    }

    .form-label {
      color: #010318;
      font-weight: 500;
      margin-bottom: 0.5rem;
    }

    .btn-success, .btn-primary {
      background-color: #ff7800;
      border: none;
      border-radius: 8px;
      padding: 0.75rem;
      font-weight: 600;
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .btn-success::before, .btn-primary::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.4s ease;
    }

    .btn-success:hover::before, .btn-primary:hover::before {
      left: 100%;
    }

    .btn-success:hover, .btn-primary:hover {
      background-color: #e56a00;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(255, 120, 0, 0.3);
    }

    .btn-link {
      color: #ff7800;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .btn-link:hover {
      color: #e56a00;
      text-decoration: underline;
    }

    .text-secondary {
      color: #010318 !important;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .text-secondary:hover {
      color: #ff7800 !important;
      text-decoration: underline;
    }

    .btn-close {
      filter: invert(1);
    }

    /* Responsive adjustments */
    @media (max-width: 576px) {
      .modal-dialog {
        margin: 1rem;
      }

      .modal-content {
        border-radius: 10px;
      }

      .modal-body {
        padding: 1.5rem;
      }

      .modal-header {
        padding: 1rem;
      }

      .btn-success, .btn-primary {
        padding: 0.65rem;
      }
    }
  </style>
</head>
<body>
  <!-- Sign Up Modal -->
  <div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="signUpModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signup" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signUpModalLabel">Sign Up</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3 form-group">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="mb-3 form-group">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            <div class="mb-3 form-group">
              <label for="phone" class="form-label">Phone Number</label>
              <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signupEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signupEmail" name="email" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signupPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signupPassword" name="password" required>
            </div>
            <div class="mt-3">
              <span>Already have an account? </span>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signInModal">Sign In</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-success w-100">Sign Up</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Sign In Modal -->
  <div class="modal fade" id="signInModal" tabindex="-1" aria-labelledby="signInModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form action="/auth/signin" method="POST">
          <div class="modal-header">
            <h5 class="modal-title" id="signInModalLabel">Sign In</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3 form-group">
              <label for="signinEmail" class="form-label">Email address</label>
              <input type="email" class="form-control" id="signinEmail" name="email" required>
            </div>
            <div class="mb-3 form-group">
              <label for="signinPassword" class="form-label">Password</label>
              <input type="password" class="form-control" id="signinPassword" name="password" required>
            </div>
            <div class="mt-3">
              <a href="/forgot-password" class="text-secondary">Forgot Password?</a>
            </div>
            <div class="mt-3">
              <span>Don't have an account? </span>
              <button type="button" class="btn btn-link p-0" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#signUpModal">Sign Up</button>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" id="getstartedbtn" class="btn btn-primary w-100">Sign In</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>

